<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ronan.tripinformation.add_expense">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="113dp"
        android:layout_gravity="center_horizontal|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tripTitle"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:text="@string/trip_name" />

        <TextView android:text="@string/current_trip" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentTrip"
            android:layout_gravity="center_horizontal|top"
            android:textSize="28sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="261dp"
        android:layout_gravity="center">

        <Spinner
            android:layout_width="116dp"
            android:layout_height="75dp"
            android:id="@+id/typeSpin"
            android:layout_gravity="center" />

        <Spinner
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/subtypeSpin"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Information"
            android:id="@+id/ExpenseInfo"
            android:layout_gravity="left|top"
            android:textSize="25sp" />

        <Spinner
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:id="@+id/currencySpin"
            android:layout_gravity="left|bottom" />

        <EditText
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/currEditText"
            android:layout_gravity="center_horizontal|bottom"
            android:hint="00000" />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/currDEditText"
            android:layout_gravity="right|bottom"
            android:hint="00" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipt"
            android:id="@+id/reciptcheck"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/lowerayout" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            android:id="@+id/submitButton"
            android:layout_gravity="center_horizontal|top" />
    </FrameLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Expenses"
            android:id="@+id/viewExpButton"
            android:layout_gravity="right|bottom" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Trip"
            android:id="@+id/newTripButton"
            android:layout_gravity="left|bottom" />

</FrameLayout>



